---
export interface Props {
  title: string;
  id?: string;
}
const { title, id } = Astro.props;
---

<article id={id} class="flex flex-col mb-5 w-[1120px]">
  <div class="flex flex-col py-5 mb-5">
    <div class="flex h-12 items-center">
      <div class="text-[#026CD6]">
        <slot name="icon" />
      </div>
      <div class="pl-3 text-2xl">{title}</div>
    </div>
    <div class="flex">
      <div class="line-gradient h-[1px] min-w-[500px]"></div>
    </div>
  </div>
  <div><slot /></div>
</article>
