---
export interface Props {
  class?: string;
  hoverClass?: string;
  enabled?: boolean;
}
const { class: style, hoverClass, enabled = true } = Astro.props;
---

<div class=`${style} relative flex toggle-visible z-50`>
  { enabled &&
  <div
    class=` ${hoverClass ? hoverClass : 'top-[calc(100%+10px)] left-[50%] translate-x-[-50%]' } opacity-0 invisible absolute flex outline-white outline-dashed outline-2 p-2 rounded-xl w-max`
  >
    <slot name="hover" />
  </div>
  }
  <slot />
</div>

<style>
  .toggle-visible:hover > div {
    opacity: 1;
    visibility: visible;
  }
</style>
